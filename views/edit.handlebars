<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form method="put" id="editform">
        <label for="post-title" class="form-label">Title</label>
        <textarea name="post-title" id="post-title" class="form-input">{{post.title}}</textarea>
        
        
        <label class="form-label" for="content">Content</label>
        <textarea id="content" name="content">{{post.content}}</textarea>
        
        
        <button type="submit" value="Submit" class="btn" id="edit">Update Post</button>
        <button type="button" id="delete" data-id="{{post.id}}">Delete Post</button>
    </form>
</div>

<script src="/js/edit.js"></script>
<script src="/js/delete.js"></script>